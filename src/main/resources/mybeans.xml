<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="address1" class="com.nashville.pojo.Address">
        <property name="street" value="102 state st"/>
        <property name="city" value="nashville"/>
        <property name="state" value="TN"/>
    </bean>

    <bean id="student1" class="com.nashville.pojo.Student">
        <!--<property name="studentName" value="jack"/>
        <property name="studentRoll" value="101"/>
        <property name="address" ref="address1"/>-->

        <constructor-arg name="studentName" value="jack2"/>
        <constructor-arg name="studentRoll" value="102"/>
        <constructor-arg name="address" ref="address1"/>
    </bean>

</beans>